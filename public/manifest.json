{
  "name": "StyleSnap - Digital Closet",
  "short_name": "StyleSnap",
  "description": "AI-powered digital closet with outfit suggestions from friends",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["lifestyle", "fashion", "social"],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/closet-view.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Closet View - Manage your digital wardrobe"
    },
    {
      "src": "/screenshots/outfit-suggestion.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Outfit Suggestions - Get styled by friends"
    },
    {
      "src": "/screenshots/social-feed.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Social Feed - Share and discover outfits"
    }
  ],
  "shortcuts": [
    {
      "name": "My Closet",
      "short_name": "Closet",
      "description": "View your clothing items",
      "url": "/closet",
      "icons": [
        {
          "src": "/icons/closet-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Get Suggestion",
      "short_name": "Suggest",
      "description": "Get outfit suggestion",
      "url": "/suggestions",
      "icons": [
        {
          "src": "/icons/suggest-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Add Item",
      "short_name": "Add",
      "description": "Add new clothing item",
      "url": "/closet?action=add",
      "icons": [
        {
          "src": "/icons/add-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/jpeg", "image/jpg", "image/png", "image/webp"]
        }
      ]
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+stylesnap",
      "url": "/outfit/%s"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
